<form class="mb-6" method="post">
  <div class="flex flex-col mb-4">
    <label class="mb-2 font-bold text-lg" for="quote">Quote</label>
    <textarea class="py-4 px-3" name="quote" id="quote"></textarea>
  </div>
  <div class="flex flex-col mb-4">
    <label class="mb-2 font-bold text-lg" for="author">Author</label>
    <input class="py-2 px-3" type="text" name="author" id="author">
  </div>
  <button type="submit" class="text-lg p-2 rounded">Add Quote</button>
</form>